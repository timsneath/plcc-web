# EditorConfig is awesome: https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# YAML
[*.yml]
indent_size = 2

# Astro components
[*.astro]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# CSS
[*.css]
indent_size = 2

# JavaScript / TypeScript
[*.js]
indent_size = 2

[*.ts]
indent_size = 2