---
const { title = 'Pine Lake Covenant Church' } = Astro.props
import '../styles/global.css'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>

  <body>
    <header>
      <nav>
        <a href={`${import.meta.env.BASE_URL}`}>PLCC</a>

        <a href={`${import.meta.env.BASE_URL}im-new/`}>I’m New</a>
        <a href={`${import.meta.env.BASE_URL}about/`}>About</a>
        <a href={`${import.meta.env.BASE_URL}families/`}>Families</a>
        <a href={`${import.meta.env.BASE_URL}for-our-neighbors/`}>For Our Neighbors</a>
        <a href={`${import.meta.env.BASE_URL}whats-happening/`}>What’s Happening</a>
        <a href={`${import.meta.env.BASE_URL}messages/`}>Messages</a>
        <a href={`${import.meta.env.BASE_URL}next-steps/`}>Next Steps</a>
        <a href={`${import.meta.env.BASE_URL}plan-a-visit/`}>Plan a Visit</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div class="site-footer__grid">
        <div>
          <strong>Pine Lake Covenant Church</strong>
          <div>Sundays at 10:00am</div>
          <div>1715 228th Ave SE, Sammamish, WA 98075</div>
          <div>
            <a
              href="https://www.google.com/maps/search/?api=1&query=1715+228th+Ave+SE+Sammamish+WA+98075"
              target="_blank"
              rel="noopener"
            >
              Directions
            </a>
          </div>
        </div>

        <div>
          <strong>Get connected</strong>
          <div><a href={`${import.meta.env.BASE_URL}plan-a-visit/`}>Plan a Visit</a></div>
          <div><a href={`${import.meta.env.BASE_URL}contact/`}>Contact</a></div>
          <div><a href={`${import.meta.env.BASE_URL}community/`}>Community</a></div>
        </div>

        <div>
          <strong>Online</strong>
          <div>
            <a href="https://www.instagram.com/pinelakecov/" target="_blank" rel="noopener">Instagram</a>
          </div>
          <div>
            <a href="https://www.youtube.com/@PineLkCovChurch" target="_blank" rel="noopener">YouTube</a>
          </div>
          <div>
            <a href="https://covchurch.org/" target="_blank" rel="noopener">Evangelical Covenant Church</a>
          </div>
        </div>
      </div>

      <p class="site-footer__legal">© {new Date().getFullYear()} Pine Lake Covenant Church</p>
    </footer>
  </body>
</html>
